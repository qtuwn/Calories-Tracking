rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Avatars folder: allow read to anyone, write only to authenticated owner or admins.
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default: deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
