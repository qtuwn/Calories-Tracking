rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles (support both a top-level user document and a nested
    // 'profile' document for compatibility). The app currently reads/writes
    // the top-level document at `users/{uid}` so allow that for authenticated
    // owners. Keeping the nested rule also works if you later switch to
    // storing profile data under `users/{uid}/profile`.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/profile {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Foods collection: public read, admin-only writes
    match /foods/{foodId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Recipes
    match /recipes/{recipeId} {
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.authorId == request.auth.uid || request.auth.token.admin == true);
      allow read: if (resource.data.isApproved == true) || (request.auth != null && resource.data.authorId == request.auth.uid) || (request.auth != null && request.auth.token.admin == true);
    }

    // Diaries: per-user entries
    match /diaries/{userId}/entries/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
